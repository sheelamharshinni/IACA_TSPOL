<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_gravity="center"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TableRow
            android:id="@+id/tr_person"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_search_result"
            >
            <TextView
                android:id="@+id/tv_acc_type"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text="CCTV Type"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tv_acc_cno"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text="Community"
                android:textSize="12dp" />



            <TextView

                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/tv_acc_status"
                android:padding="5dp"
                android:text="Status"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tv_acc_dt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/cell_shape"
                android:textColor="#000"
                android:text="Date &amp;Time"
                android:visibility="gone"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_acc_vm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="#ce2767"
                android:gravity="center"
                android:padding="5dp"
                android:text="View More"
                android:textSize="12dp" />
        </TableRow>
    </LinearLayout>
</LinearLayout>