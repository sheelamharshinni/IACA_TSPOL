<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rv1"
    android:background="#37448A"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <TextView
        android:text="Sensitive Places "
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:textColor="#f0f4f5"
        android:textStyle="bold"/>
    <ScrollView
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_background"
        android:elevation="4dp"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PS Name :"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_lm_sp_psname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""

                    android:textColor="#dc0a0a"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_lm_sp_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_baground">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lm3" />

                    <Spinner
                        android:id="@+id/spin_lm_sp_it"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imageView1"
                        android:padding="1dp"
                        android:popupBackground="#f7f8f9" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_baground">

                    <ImageView
                        android:id="@+id/im"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lm3" />


                    <Spinner
                        android:id="@+id/spin_lm_vi_sa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/im"
                        android:padding="1dp"
                        android:popupBackground="#f7f8f9" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_lm_sp_Landmark"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:digits="@string/title_blockCharacterSet"
android:inputType="text"
                    android:background="@drawable/edittext_baground"
                    android:hint="Name Of Sensitive"
                    android:paddingLeft="7dp"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/et_lm_sp_locality"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="7dp"
                    android:digits="@string/title_blockCharacterSet"

                    android:background="@drawable/edittext_baground"
                    android:hint="Locality"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/Layout10"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="#f4f4f4">

                    <EditText
                        android:id="@+id/et_lm_sp_Remarks"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="7dp"
                        android:inputType="text"
                        android:digits="@string/title_blockCharacterSet"

                        android:background="@drawable/edittext_baground"
                        android:hint="Remarks"
                        android:textSize="12dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_b"
            android:text="Reset"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:id="@+id/btn_lm_sp_reset"
            android:textColor="#f7f8f9"
            android:layout_weight="0.1"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:background="@drawable/btn_b"
            android:text="Submit"
            android:textAllCaps="false"
            android:id="@+id/btn_lm_sp_submit"
            android:textColor="#f7f8f9"
            android:layout_weight="0.1"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_b"
            android:text="View List"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="#f7f8f9"
            android:layout_weight="0.1"
            android:id="@+id/btn_lm_sp_vl"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/alert_"
            android:visibility="gone"
            android:src="@drawable/alert"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#931e1e"
            android:id="@+id/tv_error_tr"
            android:textStyle="bold"
            android:text=" "
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>