<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:text="Preview"
        android:background="#008081"
        android:textColor="#fff"
        android:textSize="14dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.09">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="VItal Installation Type"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/tv_religiou_name_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"

                    android:padding="5dp"
                    android:text=""
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Landmark"
                    android:textColor="#302828"
                    android:textSize="14dp"

                    />

                <TextView
                    android:id="@+id/tv_landmark_lm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address"
                    android:textColor="#302828"
                    android:textSize="14dp"

                    />

                <TextView
                    android:id="@+id/tv_landmark_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Remarks"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/tv_landmark_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />
            </TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_landmark_Confm"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_background"
                    android:text="Confom"
                    android:textAllCaps="false"
                    android:textColor="#2A3F54" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="12dp" />

                <Button
                    android:id="@+id/tv_landmark_Cancel"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_background"
                    android:text="Cancel"

                    android:textAllCaps="false"
                    android:textColor="#2A3F54" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>