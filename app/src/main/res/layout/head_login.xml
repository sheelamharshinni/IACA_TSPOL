<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/l4"
        android:background="@drawable/mapbag"
        android:scaleType="fitXY">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/teslogo"
            android:gravity="center"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="-32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#424188"
                android:scaleType="fitXY"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="TELANGANA STATE POLICE"
                android:layout_width="wrap_content"></TextView>


            <TextView android:layout_height="wrap_content"
                android:id="@+id/byTextView"
                android:layout_gravity="center"
                android:textColor="#424188"
                android:scaleType="fitXY"
                android:textSize="12dp"

                android:gravity="center"
                android:text="Interactive Mapping of Crime &amp; Accident for Police(imCAP)"
                android:layout_width="wrap_content"></TextView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>