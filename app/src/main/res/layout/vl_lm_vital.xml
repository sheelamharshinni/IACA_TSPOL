<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="More Details"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_b"
        android:textColor="#fff"
        android:textSize="16dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.09">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="PS Name " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_pscode"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="Type " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_vt"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="SubType " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_st"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="Landmark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_lm"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="Remarks" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_dis"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:padding="0dp">
                <TextView

                    android:layout_width="160dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#302828"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:text="Address " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_lm_v_add"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:text=" "
                    android:layout_weight="0.3"
                    android:layout_marginLeft="11dp"
                    android:textColor="#3e2c2c"
                    android:textSize="12dp" />



            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50504E"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_lm_v__Confm"
                    android:layout_width="100dp"
                    android:layout_height="40dp"

                    android:background="@drawable/btn_b"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="#f7f8f9" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>