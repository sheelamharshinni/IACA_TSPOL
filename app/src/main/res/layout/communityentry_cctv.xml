<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_b"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add New Community Group"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.09"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_baground">

            <ImageView
                android:id="@+id/iv_ps"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/cctv_iconn" />

            <Spinner
                android:id="@+id/spin_ps_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_ps"
                android:padding="1dp"
                android:popupBackground="#f7f8f9"
                android:textSize="12dp" />

        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:padding="0dp">

            <TextView

                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:padding="5dp"
                android:text="Community Name "
                android:textColor="#302828"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000" />


            <EditText
                android:id="@+id/tv_cctv_CommunityName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:background="@drawable/edittext_baground"
                android:hint="Enter Community Name "

                android:paddingLeft="7dp"
                android:textSize="12dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#50504E" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cctv_Confm"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_b"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#f7f8f9" />

            <View
                android:layout_width="60dp"
                android:layout_height="12dp" />

            <Button
                android:id="@+id/btn_cctv_Cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_b"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#f7f8f9" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>