<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mapbag"
        android:gravity="center"
        android:orientation="horizontal"
        android:scaleType="fitXY">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:scaleType="fitXY"

            android:src="@drawable/teslogo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-32dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="TELANGANA STATE POLICE"
                android:textColor="#424188"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_distname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/textView"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/iv_tps"
                android:text=" District Name"
                android:textColor="#F9D122"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/byTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="Interactive Mapping of Crime &amp; Accident for Police(imCAP)"
                android:textColor="#424188"
                android:textSize="18dp"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>